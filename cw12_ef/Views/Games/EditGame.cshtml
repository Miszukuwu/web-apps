@model Game
<form asp-action="EditGame" method="post">
    <div class="row m-2">
        <label class="col-3 text-end" asp-for="Title"></label>
        <input class="col-6" type="text" asp-for="Title" name="Title" id="Title" value="@Model.Title">
        <span asp-validation-for="Title" class="col-3 text-danger"></span>
    </div>
    <div class="row m-2">
        <label class="col-3 text-end" asp-for="Publisher"></label>
        <input class="col-6" type="text" asp-for="Publisher" name="Publisher" id="Publisher" value="@Model.Publisher">
        <span asp-validation-for="Publisher" class="col-3 text-danger"></span>
    </div>
    <div class="row m-2">
        <label class="col-3 text-end" asp-for="Price"></label>
        <input class="col-6" type="number" step="0.01" asp-for="Price" name="Price" id="Price" value="@Model.Price">
        <span asp-validation-for="Price" class="col-3 text-danger"></span>
    </div>
    <input type="number" name="Id" id="Id" value="@Model.Id" hidden readonly>
    <button class="btn btn-primary col-6 offset-3" type="submit">Edytuj</button>
</form>
@model inf03styczen2022.Models.Reservation

<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/styl1.css">
</head>
<body>
<header>
    <h1>Witamy w restauracji "Wszystkie Smaki"</h1>
</header>
<main>
    <div id="up">
        <section id="left">
            <img src="menu.jpg" alt="Nasze danie">
        </section>
        <section id="right">
            <h4>U nas dobrze zjesz!</h4>
            <ol>
                <li>Obiady od 40 zł</li>
                <li>Przekąski od 10 zł</li>
                <li>Kolacje od 20 zł</li>
            </ol>
        </section>
    </div>
    <section id="bottom">
        <h2>Zarezerwuj stolik on-line</h2>
        <form method="post" asp-action="Rezerwacja">
            <label for="data">Data (format rrrr-mm-dd):</label> <br>
            <input type="text" asp-for="ReservationDate" name="data" id="data"><br>
            <label for="ilosc">Ile osób?</label><br>
            <input type="number" name="ilosc" id="ilosc" asp-for="AmountOfPeople"><br>
            <label for="telefon">Twój numer telefonu</label><br>
            <input type="text" name="telefon" id="telefon" asp-for="PhoneNumber"><br>
            <input type="checkbox" name="zgoda" id="zgoda">
            <label for="zgoda">Zgadzam się na przetwarzanie moich danych osobowych</label><br>
            <button type="reset">WYCZYŚĆ</button>
            <button type="submit">REZERWUJ</button>
        </form>
    </section>
</main>
<footer>
    Stronę internetową opracował: <i>1234567890</i>
</footer>
</body>
</html>